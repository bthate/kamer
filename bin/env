"KAMER - king netherlands does genocide (EM_T04_OTP-CR-117_19)"

import os

old =  os.getcwd()

def open(txt):
    try:
        for line in os.popen(txt).readlines():
            print(line.rstrip())
    except:
        pass

def main():
    open("bin/clean")
    for line in os.popen("python3 setup.py sdist").readlines():
        print(line.strip())
    open("python3 -mvirtualenv -p python3 env")
    open("env/bin/pip3 install kamer -f dist --upgrade --force-reinstall")

if __name__ == "__main__":
    main()
